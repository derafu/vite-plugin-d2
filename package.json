{
  "name": "vite-plugin-d2",
  "version": "1.0.1",
  "description": "A Vite plugin to convert D2 diagrams to SVG during build.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.js --format cjs,esm --dts",
    "dev": "tsup src/index.js --format cjs,esm --dts --watch",
    "test": "vitest run",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "vite",
    "vite-plugin",
    "d2",
    "diagram",
    "svg"
  ],
  "author": "Esteban De La Fuente Rubio / Derafu <https://www.derafu.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/derafu/vite-plugin-d2"
  },
  "homepage": "https://www.derafu.dev/docs/ui/vite-plugin-d2",
  "bugs": {
    "url": "https://github.com/derafu/vite-plugin-d2/issues"
  },
  "peerDependencies": {
    "vite": "^6.0.0"
  },
  "devDependencies": {
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "vite": "^6.2.1",
    "vitest": "^3.0.8"
  },
  "dependencies": {
    "glob": "^11.0.1"
  }
}
